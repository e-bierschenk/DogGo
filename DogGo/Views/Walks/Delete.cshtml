@model DogGo.Models.ViewModels.WalkDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@{
    Html.BeginForm("Delete", "Walks", FormMethod.Post);
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().DogId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().WalkerId)
            </th>
            <th>DELETE</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Walks.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => m.Walks[i].Id)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Walks[i].Date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Walks[i].Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Walks[i].WalkerId)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Walks[i].DogId)
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="ChosenWalkIds[i]" value="ChosenWalkIds[i]" id="item.Id">
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</table>
