@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Walker Profile</h4>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(item => Model.Walks.FirstOrDefault().Date)</th>
                        <th>@Html.DisplayNameFor(item => Model.Walks.FirstOrDefault().Owner)</th>
                        <th>@Html.DisplayNameFor(item => Model.Walks.FirstOrDefault().Dog)</th>
                        <th>@Html.DisplayNameFor(item => Model.Walks.FirstOrDefault().Duration)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Walk walk in Model.Walks)
                    {
                        <tr>
                            <td>
                                @walk.Date
                            </td>
                            <td>
                                @walk.Owner.Name
                            </td>
                            <td>
                                @walk.Dog.Name
                            </td>
                            <td>
                                @walk.Duration
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        <section class="mt-5">
            <dl>
                <dt>Total Walk Time:</dt>
                <dd>@Model.Walks.Sum(item => item.Duration)</dd>
            </dl>
        </section>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new {  id = Model.Walker.Id }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>